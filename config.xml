<?xml version='1.0' encoding='utf-8'?>
<widget id="cbc.praisehymn" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Praise Hymn</name>
    <description>
        Praise Hymn used in Calvary Baptist Church for singing.
    </description>
    <author email="emmanueljaygbay@gmail.com" href="https://kwagei.com">
        Emmanuel Jaygbay
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />

        <!-- <splash src="res/screen/android/icon-48.png" density="land-hdpi" />
        <splash src="res/screen/android/icon-72.png" density="land-ldpi" />
        <splash src="res/screen/android/icon-96.png" density="land-mdpi" />
        <splash src="res/screen/android/icon-144.png" density="land-xhdpi" /> -->
        <!-- <splash src="res/screen/android/icon-192.png" density="land-xxhdpi" /> -->
        <!-- <splash src="res/screen/android/android-icon.png" density="land-xxxhdpi" /> -->

        <icon src="res/screen/android/icon-96.png" />
        <icon density="mdpi" src="res/screen/android/icon-48.png" />
        <icon density="hdpi" src="res/screen/android/icon-72.png" />
        <icon density="xhdpi" src="res/screen/android/icon-96.png" />
        <icon density="xxhdpi" src="res/screen/android/icon-144.png" />
        <icon density="xxxhdpi" src="res/screen/android/icon-192.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
